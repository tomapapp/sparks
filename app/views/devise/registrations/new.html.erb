<div class="container">
  <div class="d-flex justify-content-around">
    <h4>Sign up</h4>
  </div>
  <div class="d-flex justify-content-around mt-3">
    <p>Add your information to be fully set up.</p>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs form-group">
    <%= f.input :name,
    required: true,
    autofocus: true,
    label: "Couple name",
    input_html: { autocomplete: "name" },
    placeholder: "Maria & David" %>
    <%= f.input :email,
    required: true,
    input_html: { autocomplete: "email"},
    label: "Email(s)",
    placeholder: "Your email"%>
    <%= f.input :secondary_email,
    input_html: { autocomplete: "secondary email" },
    label: false,
    placeholder: "Your partner's email (opt.)"%>
    <%= f.input :password,
    required: true,
    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
    input_html: { autocomplete: "new-password" },
    placeholder: "Common password for you & your partner"%>
    <%= f.input :password_confirmation,
    required: true,
    input_html: { autocomplete: "new-password" }%>
    <%= f.input :avatar,
    as: :file,
    input_html: { class: 'd-none js-avatar' },
    label_html: { class: 'upload-photo avatar-label'},
    label: 'Upload a photo'%>
    <div class="file-title">

    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "main-btn"%>
  </div>
  <% end %>
</div>
