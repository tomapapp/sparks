<div class="container">
  <% @top_recommendations.each do |recommendation| %>
  <div class="card">
    <% if recommendation.photos.attached? %>

    <!-- image carousel -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <% recommendation.photos.each_with_index do |photo, n| %>
          <li data-target="#carouselExampleIndicators" data-slide-to="#{n}" class="#{'active' if n == 0}"></li>
        <% end %>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= cl_image_tag @recommendation.photos.first.key, class: "d-block w-100", crop: :fill, position: :center  %>
        </div>
        <% recommendation.photos.drop(1).each do |photo| %>
        <div class="carousel-item">
          <%= cl_image_tag photo.key,  class: "d-block w-100", crop: :fill, position: :center  %>
        </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <% else %>
    <%= image_tag "https://source.unsplash.com/random/1100x500", class: "w-100", crop: :fill, position: :center %>
    <% end %>
    <!-- image carousel -->

<!--       <% recommendation.photos.each do |photo| %>
        <%= cl_image_tag photo.key, class: "w-100", crop: :fill, position: :center  %>
      <% end %> -->

    <% else %>
    <%= image_tag "https://source.unsplash.com/random/1100x500", class: "w-100", crop: :fill, position: :center  %>
    <% end %>
    <div class="d-flex justify-content-between">
      <p><em><%= recommendation.location %></em></p>
      <p><em><%= recommendation.rating %></em></p>
    </div>
    <p><%= recommendation.category.name %></p>
    <h1><%= link_to "#{recommendation.name}", recommendation_path(recommendation) %></h1>
  </div>
  <% end %>

  <%= link_to "Get other choices", recommendations_path, class: "btn btn-primary" %>
  <%= link_to "Back to categories", categories_path, class: "btn btn-secondary" %>
  <#%= link_to "Add new recommendation", new_category_recommendation_path, class: "btn btn-secondary" %>
</div>

