<div class="container">
  <div class="card">
    <% if @recommendation.photos.attached? %>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
<!--       <ol class="carousel-indicators">
        <% @recommendation.photos.each_with_index do |photo, n| %>
          <li data-target="#carouselExampleIndicators" data-slide-to="#{n}" class="#{'active' if n == 0}"></li>
        <% end %>
      </ol> -->

      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>

      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= cl_image_tag @recommendation.photos.first.key, class: "d-block w-100", crop: :fill, position: :center  %>
        </div>
        <% @recommendation.photos.drop(1).each do |photo| %>
        <div class="carousel-item">
          <%= cl_image_tag photo.key,  class: "d-block w-100", crop: :fill, position: :center  %>
        </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <% else %>
    <%= image_tag "https://source.unsplash.com/random/1100x500", class: "w-100", crop: :fill, position: :center %>
    <% end %>
    <p><%= @recommendation.category.name %></p>
    <h1><strong><%= @recommendation.name %></strong></h1>

    <ul>
      <li>tag</li>
      <li>tag</li>
      <li>tag</li>
    </ul>

    <h3>ABOUT THIS DATE NIGHT</h3>
    <p><%= @recommendation.description %></p>
    <a href="">See more about the date</a>
    <br>

    <h3>LOCATION</h3>
    <p><%= @recommendation.location %> </p>
    <br>

    <h3>PRICE</h3>
    <p><i class="fas fa-dollar-sign"></i> Mucho</p>
    <br>

    <h3>REVIEWS</h3>
    <p><%= @recommendation.rating %></p>
    <br>

    <%= link_to "Book date", new_recommendation_datenight_path(@recommendation), class: "btn btn-primary" %>
    <br>
    <%= link_to "Back to list", category_recommendations_path(@recommendation.category), class: "btn btn-secondary" %>
    <br>
    <%= link_to "Edit", edit_category_recommendation_path(@recommendation.category, @recommendation), class: "btn btn-secondary" %>
    <br>
    <%= link_to "Delete", category_recommendation_path(@recommendation.category, @recommendation), method: :delete, class: "btn btn-secondary" %>
  </div>
</div>
