<div class="container">
  <div class="tagline">
    <h2 class="font-title">Regular, amazing <span class="red">date nights</span> for couples made easy</h2>
  </div>
    <div class="d-flex justify-content-center">
    <%= simple_form_for @user do |f| %>
      <div class="form-input">
        <%= f.input :day,
          label: "PICK A DATE NIGHT",
          collection: ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
          label_html: { class: 'font-form-title' }
        %>
      </div>
      <div class="form-input">
        <%= f.input :date_frequency,
          label: "CHOOSE FREQUENCY",
          collection: [[1, 'Once a week'], [4, 'Once every month'], [2, 'Once every two weeks']],
          label_method: :second,
          value_method: :first,
          label_html: { class: 'font-form-title'}
        %>
      </div>
        <%= f.button :submit,
          "Get started",
          class: "main-btn" %>
        <%= hidden_field_tag :next_page, "page 2" %>
      <% end %>
    </div>
 </div>
