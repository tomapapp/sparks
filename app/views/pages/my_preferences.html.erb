<div class="container">
  <!-- Title & subtitle -->
  <div class="d-flex justify-content-center">
    <div class="bubble d-flex justify-content-center">
      <p class="bubble-font">1</p>
    </div>
    <div class="bubble-line"></div>
    <div class="bubble d-flex justify-content-center">
      <p class="bubble-font">2</p>
    </div>
    <div class="bubble d-flex justify-content-center">
      <p class="bubble-font">3</p>
    </div>
  </div>


  <div class="tagline-pref">
    <h2 class="font-title text-center">Tell us more about what you and your partner like</h1>
    <h5 class="font-subtitle text-center">You can change these later - we will only use your preferences to make better recommendations!</h4>
  </div>
  <!-- Checkboxes of category choices -->
  <p class="font-form-title d-flex justify-content-center">PICK SOME STUFF YOU LIKE TO DO</p>
    <%= simple_form_for(current_user, method: :post, url: edit_preferences_path) do |f| %>
      <div class="form-input-checkbox">
        <%= f.input :preferences,
          as: :check_boxes,
          input_html: { class: 'checkboxes' },
          collection: @categories
        %>
      </div>
      <%= f.button :submit, "Next", class: "main-btn" %>
      <%= hidden_field_tag :next_page, "page 3" %>
    <% end %>

</div>

