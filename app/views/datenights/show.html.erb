<%= render 'shared/welcomebanner' %>

<div class="container">
  <div class="mt-4 mb-3">
    <h4 class="font-title text-center">Your date is booked!</h4>
  </div>

  <!-- recommendation card placeholder -->
 <div class="d-flex justify-content-around">
  <div class="d-flex">
    <em><i class="fas fa-table mr-1"></i></em><h5>  <%= @datenight.day_of_date.month %>/<%= @datenight.day_of_date.day %></h5>
  </div>
  <div class="d-flex">
    <em><i class="far fa-clock mr-1"></i></em><h5>  <%= @datenight.time.hour %>:<%= @datenight.time.min %></h5>
  </div>
  </div>


  <div class="card index-card">
    <% if @datenight.recommendation.photos.attached? %>

    <!-- image carousel -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <% @datenight.recommendation.photos.each_with_index do |photo, n| %>
        <li data-target="#carouselExampleIndicators" data-slide-to="#{n}" class="#{'active' if n == 0}"></li>
        <% end %>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= cl_image_tag @datenight.recommendation.photos.first.key, class: "d-block card-picture", crop: :fill, position: :center  %>
        </div>
        <% @datenight.recommendation.photos.drop(1).each do |photo| %>
        <div class="carousel-item">
          <%= cl_image_tag photo.key,  class: "d-block  card-picture", crop: :fill, position: :center  %>
        </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <% else %>
    <%= image_tag "https://source.unsplash.com/random/1100x500", class: "card-picture", crop: :fill, position: :center %>
    <% end %>
    <!-- image carousel -->

    <!-- text -->
    <div class="card-text">
      <div class="d-flex justify-content-between card-detail">
        <p><em><%= @datenight.recommendation.location.split(",")[1] %></em></p>
        <p><i class="fas fa-star rating"></i><em><%= @datenight.recommendation.rating %></em></p>
      </div>
      <h5 class="text-break"><strong><%= @datenight.recommendation.name %></strong></h5>
    </div>
  </div>
  <!-- text -->

<!-- IRRELEVANT FORM JUST FOR DEMO PURPOSES -->

<%= render 'shared/add_calendar_button' %>
<%= link_to "Share date night", '#', class: "btn secondary", data: { toggle: "modal", target: "#staticBackdrop" } %>
<%= link_to "Book another date night", edit_date_info_path, class: "btn secondary" %>

<div class="modal-datenight">
  <%= render 'shared/share_modal' %>
</div>


