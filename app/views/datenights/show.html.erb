<%= render 'shared/welcomebanner' %>
<%= render 'shared/badge_earned' %>


<div class="container">
  <div class="welcome">
    <h2 class="profile-title text-center">Welcome, <%= current_user.name %> !
  </div>

  <div class="tagline-pref">
    <h2 class="profile-title text-center">Your next date night is in <strong class="red"> 3 </strong> days! </h2>
  </div>

  <div class="booking-conf-box">
    <div class="booking-conf-title">
      Booking confirmation
    </div>
    <div class="booking-details-box">
      <div class="booking-details d-flex">
          <%= image_tag "image.png", class: "booking-icon" %>
        <h5 class="booking-title"><%= @datenight.recommendation.name %></h5>
      </div>
      <div class="booking-details d-flex">
        <div class="booking-icon d-flex justify-content-center">
          <i class="fas fa-table booking-icon-other"></i>
        </div>
        <h5 class="booking-text"><%= @datenight.day_of_date.month %>/<%= @datenight.day_of_date.day %></h5>
      </div>
      <div class="booking-details d-flex">
        <div class="booking-icon d-flex justify-content-center">
          <i class="far fa-clock booking-icon-other"></i>
        </div>
        <h5 class="booking-text"><%= @datenight.time.hour %>:<%= @datenight.time.min %></h5>
      </div>
      <div class="booking-details d-flex">
        <div class="booking-icon d-flex justify-content-center">
          <i class="fas fa-map-pin booking-icon-other"></i>
        </div>
        <h5 class="booking-text"><%= @datenight.recommendation.location %></h5>
      </div>
      <div class="reco-link text-center">
        See more information
      </div>
    </div>
  </div>
</div>





<!-- Add a calendar -->
  <%= render 'shared/add_calendar_button' %>
<!-- Add a calendar -->


<!-- Uber -->
  <a class="btn secondary" href="https://m.uber.com/ul/?client_id=<CLIENT_ID>&action=setPickup&pickup[latitude]=<%= current_user.latitude %>&pickup[longitude]=<%= current_user.longitude %>[formatted_address]=<%= current_user.location %>&dropoff[latitude]=<%= @datenight.recommendation.latitude %>&dropoff[longitude]=<%= @datenight.recommendation.longitude %>&dropoff[formatted_address]=<%= @datenight.recommendation.location %>">Call an Uber to your home</a>
